{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["VERCEL_URL", "PORT", "NODE_ENV"],
	"globalDependencies": ["**/.env.*.local"],
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"debug": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"cache": true,
			"persistent": false
		},
		"test": {
			"cache": true,
			"persistent": false
		}
	}
}
