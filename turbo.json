{
	"$schema": "https://turbo.build/schema.json",
	"globalDotEnv": ["**/.env.*local"],
	"pipeline": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"cache": true,
			"persistent": false
		},
		"test": {
			"cache": false,
			"persistent": false
		}
	}
}
