{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"alwaysStrict": true,
		"skipLibCheck": false,
		"removeComments": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"strictPropertyInitialization": false
	},
	"include": ["./src/**/*"]
}